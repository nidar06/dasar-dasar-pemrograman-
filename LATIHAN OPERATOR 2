#include <iostream>
using namespace std;

int main {}{
  int A = 0, B = 0, C = 0;
  cout<<"==================================================================="<<endl;
  cout<<"|  A  |  B  |  C  |  A or B  |  A or C  |  F1=(A or B)and(A or C) |"<<endl;
  cout<<"==================================================================="<<endl;
  do{
      cout<<"|  "<< A <<"  |  "<< B <<"  |  "<< C <<"  |  "<< (A||B)"   |  "<< (A||C) <<"  |       "<< ((A||B)&&(A||C) <<"       |"<<endl;
      C++;
      if (C==2){
          C=0;
          B++;
          if (B==2){
              B=0
              A++
             }
          }
     } while (A<2);
     cout <<"================================================================"<<endl;
     return 0;


}
